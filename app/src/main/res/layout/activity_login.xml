<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/aim_logon"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".login">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:useDefaultMargins="true"
        android:id="@+id/gridLayout"
        android:rowCount="5"
        android:columnCount="2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="false"
        android:layout_alignWithParentIfMissing="false"
        android:alignmentMode="alignBounds"
        android:layout_alignParentBottom="true">

        <EditText
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:hint="User ID"
            android:focusable="true"
            android:layout_above="@+id/password"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/password"
            android:layout_alignEnd="@+id/password"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2" />

        <TextView
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:text="AI Psychological Evaluator"
            android:id="@+id/textView"
            android:textColor="#000000"
            android:textSize="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2" />

        <EditText
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password"
            android:hint="Password"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_marginTop="100dp" />

        <ImageButton
            android:layout_width="153dp"
            android:layout_height="79dp"
            android:text="Login"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:id="@+id/btnLogin"
            android:layout_row="4"
            android:layout_column="0"
            android:background="@drawable/entrylogon"
            android:layout_gravity="left|bottom"
            android:adjustViewBounds="false"
            android:padding="15dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/btnRegister"
            android:layout_toStartOf="@+id/btnRegister"
            android:baselineAlignBottom="false"
            android:alpha="0" />

        <ImageButton
            android:text="Register"
            android:layout_width="153dp"
            android:layout_height="79dp"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:id="@+id/btnRegister"
            android:onClick="registerUser()"
            android:layout_row="4"
            android:layout_column="1"
            android:adjustViewBounds="true"
            android:background="@drawable/expresslogon"
            android:layout_gravity="left|bottom|center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:baselineAlignBottom="false"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:alpha="0" />

    </GridLayout>

</RelativeLayout>
